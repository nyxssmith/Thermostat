{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server Venv",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/Pi/venv/bin/python3.11"
        },
        {
            "name": "Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Pi/main.py",
            "cwd": "${fileDirname}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/Pi/venv/bin/python3.11",
            "args": [
                "--no-debugger",
                "--no-reload",
                "--host 0.0.0.0"
            ],
        },
        {
            "name": "Calibration",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Pi/interactive_calibration.py",
            "cwd": "${fileDirname}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/Pi/venv/bin/python3.11"
        }
    ],
    "compounds": [
        {
          "name": "Server/Calibration",
          "configurations": ["Server", "Calibration"],
          "stopAll": true
        }
      ]
}